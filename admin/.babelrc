{
  "presets": [
    "react-app"
  ],
  "plugins": [
    ["module-resolver", {
      "extensions": [".js", ".jsx", ".es", ".es6", ".mjs"],
      "root": ["./src"],
      "alias": {
        "assets": "./src/assets",
        "components": "./src/components",
        "containers": "./src/containers",
        "helpers": "./src/helpers",
        "tests": "./src/tests",
        "theme": "./src/theme"
      }
    }]
  ]
}