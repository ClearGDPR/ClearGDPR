{
  "name": "clear-gdpr-cg",
  "version": "1.0.0",
  "private": true,
  "description": "CG - the ClearGDPR framework implementation",
  "author": "Clevertech <support@clevertech.biz>",
  "main": "src/index.js",
  "scripts": {
    "start": "bnr start",
    "start-dev": "bnr start-dev",
    "knex": "bnr knex",
    "test": "bnr test",
    "test:debug": "bnr test:debug",
    "pretest": "false | cp -i .env.example .env || true",
    "deploy-contract": "bnr deploy-contract",
    "add-processor": "bnr add-processor"
  },
  "betterScripts": {
    "start": "knex migrate:latest && node src/index.js",
    "start-dev": "node src/wait-for-db.js && knex migrate:latest && nodemon --inspect=0.0.0.0:9230",
    "knex": "knex",
    "test": {
      "command": "jest --forceExit --detectOpenHandles",
      "env": {
        "DB_POOL_MIN": "0",
        "PORT": "0",
        "DB_DATABASE": "clear_gdpr_test"
      }
    },
    "test:debug": {
      "command": "node --inspect-brk=0.0.0.0:9231 node_modules/.bin/jest --runInBand --forceExit",
      "env": {
        "DB_POOL_MIN": "0",
        "PORT": "0",
        "DB_DATABASE": "clear_gdpr_test"
      }
    },
    "deploy-contract": "node scripts/deploy-blockchain-contract.js",
    "add-processor": "node scripts/add-processor.js"
  },
  "jest": {
    "testEnvironment": "./test/random-test-db-environment.js",
    "setupFiles": [
      "dotenv/config"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "3.5.1",
    "body-parser": "^1.18.2",
    "celebrate": "^8.0.0",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.13.3",
    "express-async-handler": "1.1.3",
    "express-ws": "^3.0.0",
    "helmet": "^3.9.0",
    "jsonwebtoken": "^8.1.0",
    "knex": "^0.13.0",
    "knex-db-manager": "0.4.0",
    "libsodium": "^0.7.3",
    "libsodium-wrappers": "^0.7.3",
    "nock": "9.2.5",
    "node-fetch": "^1.7.3",
    "pg": "7.4.1",
    "pg-escape": "0.2.0",
    "raven": "^2.2.1",
    "solc": "0.4.21",
    "underscore": "^1.9.0",
    "web3": "1.0.0-beta.34",
    "winston": "*"
  },
  "devDependencies": {
    "@types/joi": "13.0.8",
    "better-npm-run": "^0.1.0",
    "cpy-cli": "^1.0.1",
    "crypto-random-string": "^1.0.0",
    "ganache-cli": "6.1.0",
    "jest": "^23.1",
    "jest-environment-node": "^23.1",
    "keythereum": "1.0.2",
    "nodemon": "^1.12.1",
    "webpack": "^4.8.3",
    "winston-spy": "*"
  }
}
