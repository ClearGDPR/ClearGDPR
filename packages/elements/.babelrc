{
  "presets": [
    [
      "env",
      {
        "targets": {
          "browsers": ["> 1%", "last 2 versions"]
        }
      }
    ],
    "react-app"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "extensions": [".js", ".jsx", ".es", ".es6", ".mjs"],
        "root": ["./src"],
        "alias": {
          "assets": "./src/assets",
          "theme": "./src/theme",
          "components": "./src/components",
          "containers": "./src/containers",
          "contexts": "./src/contexts"
        }
      }
    ]
  ]
}
