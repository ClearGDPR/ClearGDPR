  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "doctoc",
      "git add"
    ],
    "*.*": [
      "findsecrets",
      "git add"
    ]
  },
  "devDependencies": {
    "@clevertech.biz/browse": "^0.1.2",
